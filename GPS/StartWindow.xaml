<Window x:Class="GPS.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPS"
        mc:Ignorable="d"
        WindowState="Maximized"
        Closed="Window_Closed"
        Title="Start" Height="450" Width="800">


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="89*"/>
            <RowDefinition Height="51*"/>

        </Grid.RowDefinitions>

        <Image x:Name="starting_image" Source="Resources/StartWindow.png" Grid.ColumnSpan="3" Grid.RowSpan="2" Stretch="Fill" ></Image>

        <Button Content="Kontynuuj" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" Grid.Row="1" Grid.ColumnSpan="3"
                FontSize="20"/>

    </Grid>
</Window>
